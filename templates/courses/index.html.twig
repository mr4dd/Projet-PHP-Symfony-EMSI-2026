{% extends 'base.html.twig' %}

{% block title %}Gestion des Cours{% endblock %}

{% block body %}

<header>
    <nav class="navbar">
        <div class="logo">
            <a href="/">Gestion Scolaire</a>
        </div>
        <ul class="nav-links">
            <li><button class="btn" onclick="navigateTo('/students')"><i class="fas fa-users"></i> Élèves</button></li>
            <li><button class="btn" onclick="navigateTo('/courses')"><i class="fas fa-chalkboard-teacher"></i> Cours</button></li>
            <li><button class="btn" onclick="navigateTo('/modules')"><i class="fas fa-cogs"></i> Modules</button></li>
            <li><button class="btn" onclick="navigateTo('/notes')"><i class="fas fa-graduation-cap"></i> Notes</button></li>
        </ul>
    </nav>
</header>

<main>
    <section class="dashboard-overview">
        <div class="dashboard-card">
            <h3>Gestion des Cours</h3>
            <p>Ajoutez ou modifiez des cours en remplissant le formulaire ci-dessous.</p>
        </div>
    </section>

    <section class="form-section">
        <form method="post" style="display:grid;">
            <h4>Ajouter ou Modifier un Cours</h4>

            <label for="course-name">Nom du Cours</label>
            <input type="text" id="course-name" name="course_name" placeholder="Ex. Mathématiques" required>

            <label for="module-name">Module</label>
            <select id="module-name" name="module_name" required>
            {% for module in modules %}
                <option value={{module.id}}>{{module.nom}}</option>
            {% endfor %}
            </select>
            
            <label for="description">Description</label>
            <input type="text" id="description" name="description" placeholder="c'est un course d'algebre niveau post baccalaureat">
            <input type="text" id="id" name="id" hidden>
            <button type="submit" class="btn-action">Enregistrer le Cours</button>
        </form>
    </section>

    <section class="table-container">
        <h4>Liste des Cours</h4>
        <table>
            <thead>
                <tr>
                    <th>Cours</th>
                    <th>Module</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{course.nom}}</td>
                    <td>{{moduleMap[course.getModuleId().id].nom}}</td>
                    <td>
                        
                        <button class="btn-edit" 
                                onclick="editMode(this)"
                                data-id="{{ course.id }}"
                                data-nom="{{ course.nom }}"
                                data-description="{{ course.description }}"
                                data-module="{{moduleMap[course.getModuleId().id].id}}"><i class="fas fa-edit"></i></button>
                        <form method="POST">
                            <input hidden name="id" value={{course.id}}>
                            <button class="btn-delete" name="action" value="delete"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
</main>

<footer>
    <p>&copy; 2025 Système de Gestion Scolaire | Tous droits réservés</p>
</footer>

<script>
    function navigateTo(path) {
        window.location.href = path;
    }
    function editMode(button) {
    document.getElementById('id').value = button.dataset.id;
    document.getElementById('course-name').value = button.dataset.nom;
    document.getElementById('module-name').value = button.dataset.module;
    document.getElementById('description').value = button.dataset.description;

    const submitBtn = document.querySelector('.btn-action');
    submitBtn.value = 'edit';
    submitBtn.textContent = 'Mettre à jour le cours';
    submitBtn.name = "action";
    }

</script>

{% endblock %}

