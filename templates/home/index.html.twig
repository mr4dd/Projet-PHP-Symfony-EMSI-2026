{% extends 'base.html.twig' %}

{% block title %}Domothecaria{% endblock %}

{% block body %}

<script>
    function navigateTo(url) {
        window.location.href = url;
    }
</script>

<header>
    <nav class="navbar">
        <div class="logo">
            <a href="#">Gestion Scolaire</a>
        </div>
        <ul class="nav-links">
            <li><button class="btn" onclick="navigateTo('/students')"><i class="fas fa-users"></i> Élèves</button></li>
            <li><button class="btn" onclick="navigateTo('/courses')"><i class="fas fa-chalkboard-teacher"></i> Cours</button></li>
            <li><button class="btn" onclick="navigateTo('/modules')"><i class="fas fa-cogs"></i> Modules</button></li>
            <li><button class="btn" onclick="navigateTo('/notes')"><i class="fas fa-graduation-cap"></i> Notes</button></li>
        </ul>
    </nav>
</header>

<main>
    <section class="dashboard-overview">
        <div class="dashboard-card">
            <h3>Gestion des Systèmes Scolaires</h3>
            <p>Contrôlez toutes les données scolaires à partir de ce tableau de bord centralisé.</p>
        </div>

    </section>

    <section class="data-table">
        <div class="table-container">
            <h4>Liste des Cours</h4>
            <table>
                <thead>
                    <tr>
                        <th>Cours</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for course in courses %}
                    <tr>
                        <td>{{ course.nom }}</td>
                        <td>{{course.description}}</td>
                        <td>
                            <button class="btn-edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <section class="statistics">
        <div class="stat-card">
            <h5>Total d'Élèves</h5>
            <p>{{students}}</p>
        </div>
        <div class="stat-card">
            <h5>Cours Actifs</h5>
            <p>{{ courses|length }}</p>
        </div>
        <div class="stat-card">
            <h5>Modules Mis à Jour</h5>
            <p>{{modules}}</p>
        </div>
    </section>
</main>

<footer>
    <p>&copy; 2025 Système de Gestion Scolaire | Tous droits réservés</p>
</footer>

{% endblock %}
