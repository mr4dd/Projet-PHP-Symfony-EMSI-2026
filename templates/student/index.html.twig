{% extends 'base.html.twig' %}

{% block title %}Gestion des Étudiants{% endblock %}

{% block body %}

<script>
    function navigateTo(url) {
        window.location.href = url;
    }
    function editMode(button) {
    document.getElementById('id').value = button.dataset.id;
    document.getElementById('student_name').value = button.dataset.nom;
    document.getElementById('student_first').value = button.dataset.prenom;
    document.getElementById('matricule').value = button.dataset.matricule;

    const submitBtn = document.querySelector('.btn-action');
    submitBtn.value = 'edit';
    submitBtn.textContent = 'Mettre à jour l\'etudiant';
    submitBtn.name = "action";
    }
</script>

<header>
    <nav class="navbar">
        <div class="logo">
            <a href="/">Gestion Scolaire</a>
        </div>
        <ul class="nav-links">
            <li><button class="btn" onclick="navigateTo('students')"><i class="fas fa-users"></i> Élèves</button></li>
            <li><button class="btn" onclick="navigateTo('courses')"><i class="fas fa-chalkboard-teacher"></i> Cours</button></li>
            <li><button class="btn" onclick="navigateTo('modules')"><i class="fas fa-cogs"></i> Modules</button></li>        
            <li><button class="btn" onclick="navigateTo('/notes')"><i class="fas fa-graduation-cap"></i> Notes</button></li>            
        </ul>
    </nav>
</header>

<main>
    <section class="dashboard-overview">
        <div class="dashboard-card">
            <h3>Gestion des Étudiants</h3>
            <p>Ajoutez, modifiez ou supprimez les étudiants, et attribuez-leur des cours et modules.</p>
        </div>
    </section>

    <section class="student-form">
        <div class="table-container">
            <h4>Ajouter ou Modifier un Élève</h4>
            <form method="post" style="display:grid;">
                <label for="student_name">Nom de l'élève:</label>
                <input type="text" id="student_name" name="nom" placeholder="Entrez le nom de l'élève" required>
                <label for="student_name">Prenom de l'eleve:</label>
                <input type="text" id="student_first" name="prenom" placeholder="Entrez le nom de l'élève" required>

                <label for="matricule">Matricule:</label>
                <input type="text" id="matricule" name="matricule" placeholder="Entrez le matricule de l'élève" required>
                <input type="text" id="id" name="id" hidden>
                <button type="submit" class="btn-action"><i class="fas fa-save"></i> Enregistrer l'Élève</button>
            </form>
        </div>
    </section>

    <section class="student-list">
        <div class="table-container">
            <h4>Liste des Étudiants</h4>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Matricule</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for student in students %}
                    <tr>
                        <td>{{student.nom}}</td>
                        <td>{{student.prenom}}</td>
                        <td>{{student.matricule}}</td>
                        <td>
                            <button class="btn-edit"
                            onclick="editMode(this)"
                            data-id="{{ student.id }}"
                            data-nom="{{ student.nom }}"
                            data-prenom="{{ student.prenom }}"
                            data-matricule="{{ student.matricule }}"><i class="fas fa-edit"></i></button>
                            <form method="POST">
                                <input hidden name="id" value={{student.id}}>
                                <button class="btn-delete" name="action" value="delete"><i class="fas fa-trash-alt"></i></button>
                            </form>
                            <form method="POST" action="/bulletin">
                                <input hidden name="id" value={{student.id}}>
                                <button class="btn-bulletin"><i class="fa-solid fa-file-lines"></i></button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <section class="statistics">
        <div class="stat-card">
            <h5>Total d'Élèves</h5>
            <p>{{ students|length }}</p>
        </div>
        <div class="stat-card">
            <h5>Cours Actifs</h5>
            <p>{{courses}}</p>
        </div>
        <div class="stat-card">
            <h5>Modules Mis à Jour</h5>
            <p>{{modules}}</p>
        </div>
    </section>
</main>

<footer>
    <p>&copy; 2025 Système de Gestion Scolaire | Tous droits réservés</p>
</footer>

{% endblock %}

