{% extends 'base.html.twig' %}

{% block title %}Gestion des Étudiants{% endblock %}

{% block body %}
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    font-family: 'Arial', sans-serif;
}

body {
    background-color: #f7f9fc;
    color: #333;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

a {
    text-decoration: none;
    color: inherit;
}

.navbar {
    background-color: #343a40;
    color: #fff;
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 10;
    width: 100%;
}

.navbar .logo a {
    font-size: 1.75rem;
    font-weight: bold;
    color: #fff;
}

.navbar .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
}

.navbar .nav-links li {
    list-style: none;
}

.navbar .nav-links li button {
    font-size: 1rem;
    background: transparent;
    border: none;
    color: #fff;
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.navbar .nav-links li button:hover {
    background-color: #f4a261;
}

.navbar .nav-links li button i {
    margin-right: 8px;
}

main {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    flex-grow: 1;
}

.dashboard-overview {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
}

.dashboard-card {
    flex: 1;
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.actions {
    display: flex;
    gap: 1.5rem;
    margin-top: 1.5rem;
}

.btn-action {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: background-color 0.3s;
}

.btn-action:hover {
    background-color: #f4a261;
}

.table-container {
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

table th, table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

table th {
    background-color: #f4f7fc;
}

table td button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    margin: 0 0.25rem;
}

table td button:hover {
    background-color: #f4a261;
}

.statistics {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
}

.stat-card {
    background: #fff;
    flex: 1;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.stat-card h5 {
    font-size: 1rem;
    color: #888;
    margin-bottom: 0.5rem;
}

.stat-card p {
    font-size: 1.5rem;
    font-weight: bold;
}

footer {
    background-color: #343a40;
    color: #fff;
    padding: 1.5rem;
    text-align: center;
}

@media (max-width: 768px) {
    .navbar .nav-links {
        flex-direction: column;
        gap: 1rem;
    }

    .dashboard-overview {
        flex-direction: column;
    }

    .actions {
        flex-direction: column;
    }

    .statistics {
        flex-direction: column;
        gap: 1rem;
    }
}

</style>

<script>
    function navigateTo(url) {
        window.location.href = url;
    }
</script>

<header>
    <nav class="navbar">
        <div class="logo">
            <a href="#">Gestion Scolaire</a>
        </div>
        <ul class="nav-links">
            <li><button class="btn" onclick="navigateTo('students')"><i class="fas fa-users"></i> Élèves</button></li>
            <li><button class="btn" onclick="navigateTo('courses')"><i class="fas fa-chalkboard-teacher"></i> Cours</button></li>
            <li><button class="btn" onclick="navigateTo('modules')"><i class="fas fa-cogs"></i> Modules</button></li>
            <li><button class="btn" onclick="navigateTo('profile')"><i class="fas fa-user"></i> Profil</button></li>
            <li><button class="btn" onclick="navigateTo('#')"><i class="fas fa-sign-out-alt"></i> Déconnexion</button></li>
        </ul>
    </nav>
</header>

<main>
    <section class="dashboard-overview">
        <div class="dashboard-card">
            <h3>Gestion des Étudiants</h3>
            <p>Ajoutez, modifiez ou supprimez les étudiants, et attribuez-leur des cours et modules.</p>
        </div>
    </section>

    <!-- Add/Modify Student Form -->
    <section class="student-form">
        <div class="table-container">
            <h4>Ajouter ou Modifier un Élève</h4>
            <form method="post" style="display:grid;">
                <label for="student_name">Nom de l'élève:</label>
                <input type="text" id="student_name" name="student_name" placeholder="Entrez le nom de l'élève" required>

                <label for="student_email">Email:</label>
                <input type="email" id="student_email" name="student_email" placeholder="Entrez l'email de l'élève" required>

                <label for="student_classes">Classes:</label>
                <select multiple id="student_classes" name="student_classes[]">
                    <option value="math">Mathématiques</option>
                    <option value="science">Sciences</option>
                    <option value="history">Histoire</option>
                    <option value="english">Français</option>
                </select>

                <label for="student_modules">Modules:</label>
                <select multiple id="student_modules" name="student_modules[]">
                    <option value="module_1">Module 1</option>
                    <option value="module_2">Module 2</option>
                    <option value="module_3">Module 3</option>
                    <option value="module_4">Module 4</option>
                </select>

                <button type="submit" class="btn-action"><i class="fas fa-save"></i> Enregistrer l'Élève</button>
            </form>
        </div>
    </section>

    <!-- Student List Table -->
    <section class="student-list">
        <div class="table-container">
            <h4>Liste des Étudiants</h4>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Classes</th>
                        <th>Modules</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>John Doe</td>
                        <td>john.doe@email.com</td>
                        <td>Mathématiques, Sciences</td>
                        <td>Module 1, Module 2</td>
                        <td>
                            <button class="btn-edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>Jane Smith</td>
                        <td>jane.smith@email.com</td>
                        <td>Français, Histoire</td>
                        <td>Module 3, Module 4</td>
                        <td>
                            <button class="btn-edit"><i class="fas fa-edit"></i></button>
                            <button class="btn-delete"><i class="fas fa-trash-alt"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="statistics">
        <div class="stat-card">
            <h5>Total d'Élèves</h5>
            <p>350</p>
        </div>
        <div class="stat-card">
            <h5>Cours Actifs</h5>
            <p>15</p>
        </div>
        <div class="stat-card">
            <h5>Modules Mis à Jour</h5>
            <p>7</p>
        </div>
    </section>
</main>

<footer>
    <p>&copy; 2025 Système de Gestion Scolaire | Tous droits réservés</p>
</footer>

{% endblock %}

