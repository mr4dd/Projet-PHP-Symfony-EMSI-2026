{% extends 'base.html.twig' %}

{% block title %}Gestion des Modules{% endblock %}

{% block body %}

<header>
    <nav class="navbar">
        <div class="logo">
            <a href="/">Gestion Scolaire</a>
        </div>
        <ul class="nav-links">
            <li><button class="btn" onclick="navigateTo('/students')"><i class="fas fa-users"></i> Élèves</button></li>
            <li><button class="btn" onclick="navigateTo('/courses')"><i class="fas fa-chalkboard-teacher"></i> Cours</button></li>
            <li><button class="btn" onclick="navigateTo('/modules')"><i class="fas fa-cogs"></i> Modules</button></li>
            <li><button class="btn" onclick="navigateTo('/notes')"><i class="fas fa-graduation-cap"></i> Notes</button></li>
        
        </ul>
    </nav>
</header>

<main>
    <section class="dashboard-overview">
        <div class="dashboard-card">
            <h3>Gestion des Modules</h3>
            <p>Ajoutez ou modifiez des modules en remplissant le formulaire ci-dessous.</p>
        </div>
    </section>

    <section class="form-section">
        <form method="post" style="display:grid;">
            <h4>Ajouter ou Modifier un Module</h4>

            <label for="module-name">Nom du Module</label>
            <input type="text" id="module-name" name="module_name" placeholder="Ex. Mathématiques Avancées" required>

            <label for="module-description">Description</label>
            <input type="text" id="module-description" name="description" placeholder="Ex. Cours avancé en Mathématiques" required>
            <input type="text" id="id" name="id" hidden>
            <button type="submit" class='btn-action'>Enregistrer le Module</button>
        </form>
    </section>

    <section class="table-container">
        <h4>Liste des Modules</h4>
        <table>
            <thead>
                <tr>
                    <th>Nom du Module</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for module in modules %}    
                <tr>
                    <td>{{module.nom}}</td>
                    <td>{{module.description}}</td>
                    <td>
                        <button class="btn-edit"
                        onclick="editMode(this)"
                        data-id="{{ module.id }}"
                        data-nom="{{ module.nom }}"
                        data-description="{{ module.description }}"
                        ><i class="fas fa-edit"></i></button>
                        <form method="POST">
                            <input hidden name="id" value={{module.id}}>
                            <button class="btn-delete" name="action" value="delete"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
</main>

<footer>
    <p>&copy; 2025 Système de Gestion Scolaire | Tous droits réservés</p>
</footer>

<script>
    function navigateTo(path) {
        window.location.href = path;
    }
    function editMode(button) {
    document.getElementById('id').value = button.dataset.id;
    document.getElementById('module-name').value = button.dataset.nom;
    document.getElementById('module-description').value = button.dataset.description;

    const submitBtn = document.querySelector('.btn-action');
    submitBtn.value = 'edit';
    submitBtn.textContent = 'Mettre à jour le module';
    submitBtn.name = "action";
    }
</script>

{% endblock %}

